import requests
import json


def weekly_forecast(lat, lon):
    weather = requests.get(f"https://api.weather.gov/points/{lat},{lon}")

    json = weather.json()
    forecast = json["properties"]["forecast"]
    daily_forecast = requests.get(forecast).json()

    days = []
    temps = []
    
    my_fore = ""
    for section in daily_forecast["properties"]["periods"]:
        days.append(section["name"])
        temps.append(section["temperature"])
    for i in range(14):
        my_fore = f"{days[i]} - {temps[i]}"
        Label(root, text=my_fore, font= ("Arial", 12)).pack()
        
root = Tk()
root.geometry("900x600") 
root.title("Weather App")
lat=StringVar()
lat.set("")
lon=StringVar()
lon.set("")
label_user = Label(root, text="Latitude").pack()
entry_lat = Entry(root, width=35, borderwidth=5,textvariable=lat).pack()
label_pass = Label(root, text="Longitude").pack()
entry_lon = Entry(root, width=35, borderwidth=5, textvariable=lon).pack()
MyButton=Button(root, text="Get Forecast",command=lambda:weekly_forecast(lat.get(), lon.get()))
MyButton.pack()
quit_button = Button(root, text="Quit",command=root.destroy)
quit_button.pack()

root.mainloop()

